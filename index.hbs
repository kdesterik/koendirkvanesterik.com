{{!< default}}

<div class="site-background">
	{{#foreach posts }}
	<div class="post-image" data-target="{{ remove_slashes url }}" style="background-image: url( '{{ image }}' );"></div>
	{{/foreach}}
</div>

<header class="site-header">
	 <h1 class="site-title"><a href="{{ @blog.url }}">{{ @blog.title }}</a></h1>
</header>

<main class="content" role="main">
	{{#foreach posts }}
	<a id="{{ remove_slashes url }}" class="post-link" href="{{ url }}" rel="bookmark">
		<article class="{{ post_class }}" role="article" itemscope itemtype="http://schema.org/Article">
			<header class="post-header">
				<span class="post-meta"><time datetime="{{ date format='YYYY-MM-DD' }}" itemprop="datePublished">{{ date format="YYYY.MM.DD" }}</time></span>
				<h2 class="post-title" itemprop="headline">{{{ title }}}</h2>
			</header>
		</article>
	</a>
	{{/foreach}}
</main>

